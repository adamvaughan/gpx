.start-time
  = @segment.start_time

%section#distance
  %header
    %h1 Distance

  %dl
    %dt Total Distance
    %dd
      = @segment.distance
      %abbr{ :title => 'miles' } mi

    %dt Ascending Distance
    %dd
      = @segment.ascending_distance
      %abbr{ :title => 'miles' } mi

    %dt Descending Distance
    %dd
      = @segment.descending_distance
      %abbr{ :title => 'miles' } mi

    %dt Flat Distance
    %dd
      = @segment.flat_distance
      %abbr{ :title => 'miles' } mi

%section#duration
  %header
    %h1 Duration

  %dl
    %dt Total Duration
    %dd
      = @segment.duration

    %dt Active Duration
    %dd
      = @segment.active_duration

    %dt Acending Duration
    %dd
      = @segment.ascending_duration

    %dt Descending Duration
    %dd
      = @segment.descending_duration

    %dt Flat Duration
    %dd
      = @segment.flat_duration

%section#speed
  %header
    %h1 Speed

  %dl
    %dt Speed
    %dd
      = @segment.average_speed
