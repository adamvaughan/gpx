      = @segment.average_ascending_speed
      %abbr{ :title => 'miles per hour' } mph

    %dt Descending Speed
    %dd
      = @segment.average_descending_speed
      %abbr{ :title => 'miles per hour' } mph

    %dt Flat Speed
    %dd
      = @segment.average_flat_speed
      %abbr{ :title => 'miles per hour' } mph

    %dt Maximum Speed
    %dd
      = @segment.maximum_speed
      %abbr{ :title => 'miles per hour' } mph

%section#pace
  %header
    %h1 Pace

  %dl
    %dt Pace
    %dd
      = @segment.average_pace
      %abbr{ :title => 'minutes per mile' } min/mi

    %dt Ascending Pace
    %dd
      = @segment.average_ascending_pace
      %abbr{ :title => 'minutes per mile' } min/mi

    %dt Descending Pace
    %dd
      = @segment.average_descending_pace
      %abbr{ :title => 'minutes per mile' } min/mi

